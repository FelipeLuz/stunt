@page "/profile"


@code {
    private Models.Profile UserProfile = new Models.Profile 
    {
        ImageUrl = "path_to_some_image.jpg",
        Name = "John Doe",
        UniversityCourse = "Computer Science",
        Origin = "New York",
        Destination = "San Francisco"
    };
}

<div class="profile-container">
    <img src="@UserProfile.ImageUrl" alt="@UserProfile.Name" class="profile-image" />
    <h3>@UserProfile.Name</h3>
    <p><strong>University Course:</strong> @UserProfile.UniversityCourse</p>
    <p><strong>From:</strong> @UserProfile.Origin</p>
    <p><strong>Goes to:</strong> @UserProfile.Destination</p>
</div>

<style>
    .profile-container {
        max-width: 400px;
        border: 1px solid #ccc;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
    }

    .profile-image {
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 20px;
    }
</style>
