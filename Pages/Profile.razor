@page "/profile"

<div class="d-flex flex-column justify-content-center align-items-center vh-100 bg-light">
    <div class="profile-container card shadow-sm p-4 text-center bg-white rounded">
        <img src="@UserProfile.ImageUrl" alt="@UserProfile.Name" class="profile-image img-thumbnail mb-3 rounded-circle" />
        <h3>@UserProfile.Name</h3>
        <p><strong>University Course:</strong> @UserProfile.UniversityCourse</p>
        <p><strong>From:</strong> @UserProfile.Origin</p>
        <p><strong>Goes to:</strong> @UserProfile.Destination</p>
    </div>
</div>

<style>
    .profile-container {
        max-width: 400px;
    }

    .profile-image {
        width: 100px;       /* Adjusted the width to be smaller for a profile picture */
        height: 100px;     /* Made it a fixed height to ensure uniformity */
        object-fit: cover;
        margin: 0 auto 20px; /* Centered the image and added margin to the bottom */
    }
</style>

@code {
    private Models.Profile UserProfile = new Models.Profile 
    {
        ImageUrl = "student.png",
        Name = "John Doe",
        UniversityCourse = "Computer Science",
        Origin = "New York",
        Destination = "San Francisco"
    };
}
